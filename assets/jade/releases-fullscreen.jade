		include templates/footer.jade
		include templates/scripts.jade
		script(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/2542/jquery.scrollie.min_1.js")
		script.
			$( window ).ready(function() {
				var wHeight = $(window).height();
					$('.release-slide')
					.height(wHeight)
					.scrollie({
					scrollOffset : -50,
					scrollingInView : function(elem) {
						var bgColor = elem.data('background');
						var txtColor = elem.data('color');
						$('body').css('background-color', bgColor);
						$('.release-slide').css('color', txtColor);
					}
				});
			});